<h2><center>Your cart</center></h2>
<table class="table table-condensed">
  <thead>
    <tr>
   	  <th>#</th>
   	  <th>Product</th>
   	  <th>Price</th>
   	  <th>Size (cm)</th>
   	  <th>Qty</th>
   	</tr>
  </thead>
  <tbody>
  <%total_price=0%>
  <%total_qty=0%>
  <%@items.each do |item|%>
   <tr>
   	  <td><%= item[0].id %></td>
   	  <td><%= item[0].title %></td>
   	  <td><%= item[0].price %> $</td>
   	  <td><%= item[0].size %></td>
   	  <td><%= item[1] %></td>
   </tr>
   <%total_price +=item[0].price * item[1].to_i%>
   <%total_qty +=item[1].to_i%>
  <% end %>
   <tr>
   		<td></td>
   		<td></td>
   		<td>Total price: <%= total_price %>$</td>
   		<td></td>
   		<td>Total qty: <%= total_qty %></td>
   </tr>

  </tbody>
</table>




